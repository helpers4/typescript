# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.json, *.json.old]
max_line_length = off
insert_final_newline = off

# Ignore limits
[scripts/*]
max_line_length = off

# Ignore all
[pnpm-lock.yaml]
max_line_length = off
insert_final_newline = off
trim_trailing_whitespace = false